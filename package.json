    "chai": "^4.3.4",
    "coingecko-api": "^1.0.10",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.9",
    "hardhat": "^2.9.9",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.9.0",
